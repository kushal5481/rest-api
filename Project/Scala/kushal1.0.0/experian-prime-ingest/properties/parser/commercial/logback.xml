<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender with dynamic log path -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Log path will be set dynamically via system property -->
        <file>${LOG_FILE_PATH:-C:/NG_Git/VSCode-Workspace/kushal1.0.0/experian-prime-ingest/log/parser/commercial/application.log}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE_PATH:-C:/NG_Git/VSCode-Workspace/kushal1.0.0/experian-prime-ingest/log/parser/commercial/application}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Specific loggers for your application -->
    <logger name="com.experian.ind.nextgen" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- Reduce Spark logging verbosity -->
    <logger name="org.apache.spark" level="WARN" />
    <logger name="org.sparkproject" level="WARN" />
    <logger name="org.apache.hadoop" level="WARN" />
</configuration>
